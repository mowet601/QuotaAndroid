<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_make_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quota.quota.make_task">


    <TextView
        android:text="Date or time is invalid."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmTask"
        android:id="@+id/error"
        android:textSize="23sp"
        android:layout_alignRight="@+id/taskName"
        android:layout_alignEnd="@+id/taskName"
        android:textColor="@android:color/background_dark"
        android:textColorHighlight="@android:color/background_dark"
        android:visibility="invisible" />

    <Button
        android:text="Create Task"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/confirmTask"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/taskName"
        android:hint="Enter Task Name..."
        android:backgroundTint="?attr/colorButtonNormal"
        android:background="?attr/colorButtonNormal"
        android:layout_centerInParent="false"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_width="230dp"
        android:layout_alignTop="@+id/confirmTask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priority"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/timeIn"
        android:layout_toStartOf="@+id/timeIn" />

    <TextView
        android:text="Low Priority"
        android:layout_height="50dp"
        android:id="@+id/low"
        android:layout_width="75dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/priority"
        android:layout_toLeftOf="@+id/priority"
        android:layout_toStartOf="@+id/priority"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/timeIn"
        android:background="?attr/colorButtonNormal"
        android:hint="00:00 to 23:59"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_above="@+id/priority"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp" />

    <TextView
        android:text="High Priority"
        android:layout_height="50dp"
        android:id="@+id/high"
        android:layout_width="75dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/timeIn"
        android:layout_toRightOf="@+id/priority"
        android:layout_toEndOf="@+id/priority"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <EditText
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateIn"
        android:hint="mm/dd/yyyy"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_width="150dp"
        android:backgroundTint="?attr/colorButtonNormal"
        android:background="?attr/colorButtonNormal"
        android:layout_height="65dp"
        android:layout_above="@+id/timeIn"
        android:layout_alignLeft="@+id/timeIn"
        android:layout_alignStart="@+id/timeIn"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="Enter Task Date"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:layout_width="300dp"
        android:layout_alignBottom="@+id/dateIn"
        android:layout_alignLeft="@+id/low"
        android:layout_alignStart="@+id/low" />

    <TextView
        android:text="Enter Task Time"
        android:layout_height="40dp"
        android:id="@+id/date"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_alignBaseline="@+id/timeIn"
        android:layout_alignBottom="@+id/timeIn"
        android:layout_alignLeft="@+id/low"
        android:layout_alignStart="@+id/low" />


</RelativeLayout>

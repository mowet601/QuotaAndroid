<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:outlineProvider="paddedBounds">

    <TextView
        android:text="Choose Task Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_alignTop="@+id/taskDate"
        android:layout_toLeftOf="@+id/taskDate"
        android:layout_toStartOf="@+id/taskDate"
        android:layout_marginTop="30dp"
        android:textAlignment="center" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="51dp"
        android:id="@+id/taskName"
        android:hint="Enter Task Name..."
        android:backgroundTint="?attr/colorButtonNormal"
        android:background="?attr/colorButtonNormal"
        android:layout_centerInParent="false"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_width="230dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/taskDate"
        android:layout_marginTop="13dp"
        style="@android:style/Widget.DatePicker"
        android:layout_below="@+id/taskName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <TextView
        android:text="Choose Task Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:layout_alignTop="@+id/taskTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/taskDate"
        android:layout_toStartOf="@+id/taskDate" />

    <TextView
        android:text="High Priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/high"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/priorityBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_height="wrap_content"
        android:max="2"
        android:progress="3"
        android:layout_marginTop="35dp"
        android:id="@+id/priorityBar"
        android:layout_width="175dp"
        android:layout_below="@+id/taskTime"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Low Priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/high"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Create Task"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/high"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/confirmTask"
        android:textColor="@android:color/background_light"
        android:background="@color/colorPrimary"
        android:textSize="30sp"
        android:textAllCaps="false" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:id="@+id/taskTime"
        style="@android:style/Widget.Holo.Light.TimePicker"
        android:layout_below="@+id/taskDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>